<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:orientation="vertical"
    android:paddingHorizontal="12dp"
    android:paddingVertical="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bubble_agent"
        android:maxWidth="300dp"
        android:orientation="vertical"
        android:paddingHorizontal="14dp"
        android:paddingTop="10dp"
        android:paddingBottom="6dp">

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="272dp"
            android:text="Message"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.3" />

        <TextView
            android:id="@+id/btnExpandThinking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:padding="4dp"
            android:text="â–¼ Show thinking"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:visibility="gone" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardThinking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/thinking_bg"
        app:cardCornerRadius="8dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/tvThinking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="300dp"
            android:padding="12dp"
            android:text=""
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:typeface="monospace" />
    </androidx.cardview.widget.CardView>
</LinearLayout>
